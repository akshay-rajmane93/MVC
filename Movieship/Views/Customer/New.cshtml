@model Movieship.ViewModel.ViewModel1
@{
    ViewBag.Title = "New";
}
<div class="container">

    <h2>New Customer</h2>

    @using (Html.BeginForm("Create", "Customer"))
    {
        <div class="form-group ">
            @Html.LabelFor(m => m.Customer.Name)
            @Html.TextBoxFor(m => m.Customer.Name, new { @class = "form-control" })
            @Html.ValidationMessageFor(m=>m.Customer.Name)

        </div>
        <div class="form-group">
            @Html.LabelFor(m => m.Customer.Birthdate)
           
            @Html.TextBoxFor(m => m.Customer.Birthdate,"{0:d MM yyyy}", new { @class = "form-control" })
            @Html.ValidationMessageFor(m => m.Customer.Birthdate)

        </div>
        <div class="form-check">

            @Html.CheckBoxFor(m => m.Customer.IsSuscribed) Want to Suscribe?

        </div>
        <div class="form-group " style="margin-top:1.5vw;">
            @Html.LabelFor(m => m.Customer.MembId)<br />
            @Html.DropDownListFor(m => m.Customer.MembId, new SelectList(Model.MemberShip, "Id", "MenberShipType"), "Select Membership Type", new { @class = "form -control" })
            @Html.ValidationMessageFor(m => m.Customer.MembId)
        </div>
        @Html.HiddenFor(m=>m.Customer.Id)
        @Html.AntiForgeryToken()
        <button class="btn btn-primary" typeof="submit">Save</button>
    }
    </div>
